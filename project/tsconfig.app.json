/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@app/*": ["app/*"],
      "@environments/*": ["environments/*"],
      "@shared/*": ["app/shared/*"],
      "@components/*": ["app/presentation/components/*"],
      "@pages/*": ["app/presentation/pages/*"],
      "@services/*": ["app/application/services/*"],
      "@repositories/*": ["app/infrastructure/repositories/*"],
      "@domain/*": ["app/domain/*"]
    },
    "outDir": "./out-tsc/app",
    "types": []
  },
  "files": ["src/main.ts"],
  "include": ["src/**/*.d.ts"]
}
